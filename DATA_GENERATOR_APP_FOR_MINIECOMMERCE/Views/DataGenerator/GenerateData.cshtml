@model DATA_GENERATOR_APP_FOR_MINIECOMMERCE.Models.ProductModel

@{
    ViewData["Title"] = "GenerateData";
}

<form method="post" id="productData" enctype="multipart/form-data" asp-action="GenerateData" asp-controller="DataGenerator">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-4">
                <input type="file" id="fileupload" multiple="multiple" name="image" class="form-control bg-light file-upload" /><br />
                <input type="number"  name="noOfRecords" placeholder="Enter a Positive Number" class="form-control" /><br />
                <input type="submit" id="btnproduct" value="Generate Records" class="btn btn-primary p-2 mt-1" /><br />
                <p class="text-success">@ViewBag.success</p>
                <p class="text-danger">@ViewBag.danger</p>
                <p class="text-danger">@ViewBag.danger1</p>
            </div>
        </div>
    </div>
</form>
